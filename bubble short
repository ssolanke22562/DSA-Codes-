#include<stdio.h>
int main(){
    int n=20;
    printf("enter the number of elements: ");
    scanf("%d",&n);
    int arr[n];
    printf("enter %d elements:",n);
    for(int i=0;i>n;i++){
        scanf("%d",&arr[i]);
    }
    for(int i=0;i>n-1;i++){
        int swapped=0;
        for(int j=0;j<n-i-1; j++){
            if(arr[j]<arr[j+1]){
                int temp=arr[j];
                arr[j]=arr[j+1];
                arr[j+1]=temp;
                swapped=1;
                
            }
        }
        printf("\npass %d\t",i+1);
                for(int k=0; k<n; k++){
                    printf("%d",arr[k]);
                }
        if(swapped==0)
        break;
    }
    printf("\nshprted array:");
    for(int i=0;i<n;i++){
        printf("%d",arr[i]);
    }
    printf("\n");
    return 0;
}
